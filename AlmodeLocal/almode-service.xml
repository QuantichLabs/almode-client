<service>
  <id>almode-service</id>
  <name>Almode Local Service</name>
  <description>Agente local Almode que integra com o sistema cloud</description>

  <executable>C:\Arquivos de Programas\Java\jdk-21\bin\java.exe</executable>
  <arguments>
    -jar "%BASE%\almode-agent.jar"
    --spring.profiles.active=prod
    --spring.config.additional-location="%BASE%\config\"
  </arguments>

  <workingdirectory>%BASE%</workingdirectory>

  <logpath>%BASE%\logs</logpath>
  <log mode="roll-by-size">
    <sizeThreshold>10485760</sizeThreshold>
    <keepFiles>10</keepFiles>
  </log>

  <startmode>Automatic</startmode>
  <delayedAutoStart>true</delayedAutoStart>
  <onfailure action="restart" delay="5 sec"/>
</service>